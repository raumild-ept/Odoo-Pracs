<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sales_data_form" model="ir.ui.view">
        <field name="name">sales.data.form</field>
        <field name="model">sale.order.team.ept</field>
        <field name="arch" type="xml">
            <form string="Sales Data">
                <sheet>
                    <group>
                        <group>
                            <field name="current_sales_team_id"/>
                            <field name="current_sales_person_id"/>
                        </group>
                        <group>
                            <field name="sales_team_id"/>
                            <field name="sales_person_id"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="update_data" string="Save" type="object"/>
                    <button special="cancel" type="object" string="Close"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>